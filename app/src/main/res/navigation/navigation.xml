    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.rajendra.androidjetpackkotlin.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_dataBindingFragment"
            app:destination="@id/dataBindingFragment" />
    </fragment>
    <fragment
        android:id="@+id/dataBindingFragment"
        android:name="com.rajendra.androidjetpackkotlin.databinding.DataBindingFragment"
        android:label="data_binding_fragment"
        tools:layout="@layout/data_binding_fragment" />
